<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">#ff0000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff000</item>
        <item name="colorPrimaryDark">#fff000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

    </style>
    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>

        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:background">#ff0ff0</item>
    </style>
    <style name="popUpowy" >
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
