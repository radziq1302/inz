<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#6fc7b8">

    <EditText
        android:id="@+id/tmp_1"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:ems="12"
        android:hint="wykształcenie"
        android:inputType="textPersonName"

        android:onClick="onClick" />

    <EditText
        android:id="@+id/tmp_2"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="textPersonName"
        android:hint="Częstotliwośc wizyt w muzeum" />

    <EditText
        android:id="@+id/tmp_3"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="textPersonName"
        android:hint="Ocena własna wiedzy o sztuce"
        android:text=""/>

    <EditText
        android:id="@+id/tmp_4"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="textPersonName"
        android:hint="Domyslny tryb zwiedzania" />

    <Button
        android:id="@+id/btn_kwestionariusz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16sp"
        android:text="Zapisz kwestionariusz" />
</LinearLayout>